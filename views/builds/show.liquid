{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <h2 class="d-flex justify-content-center">
      {{ build.name }} <br />
      <br />
      Mythic Item - {{ build.item1 }} <br />
      Boots - {{ build.boots }} <br />
      Item 3 - {{ build.item3 }} <br />
      Item 4 - {{ build.item4 }} <br />
      Item 5 - {{ build.item5 }} <br />
      Item 6 - {{ build.item6 }} <br />
    </h2>
    <br />
    <br />
    <div class="d-flex justify-content-center">
      <a href="/builds/{{ build._id }}/edit" class="text-decoration-none"> <button class="border border-dark mx-2">Edit Build</button></a>

      <form action="/builds/{{ build._id }}?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="mx-2 border border-dark"/>
      </form>

      <a href="/builds/" class="text-decoration-none "><button class="border border-dark mx-2">Back to Main</button></a>
    </div>
  </article>
</div>
{% endblock %}
