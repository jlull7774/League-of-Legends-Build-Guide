{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <h2>
      {{ build.name }}
      {{ build.item1 }}
      {{ build.boots }}
      {{ build.item3 }}
      {{ build.item4 }}
      {{ build.item5 }}
      {{ build.item6 }}
    </h2>
    <a href="/builds/{{ build._id }}/edit"><button>Edit Build</button></a>
    <form action="/builds/{{ build._id }}?_method=DELETE" method="POST">
      <input type="submit" value="Delete" />
    </form>
    <a href="/builds/"><button>Back to Main</button></a>
  </article>
</div>
{% endblock %}
