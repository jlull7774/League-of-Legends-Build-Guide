{% layout "layout.liquid" %} {% block content %}
<div class="d-flex flex-column justify-content-center">
  <a href="/builds/new" class="d-inline-flex justify-content-center"><button>Create A New Build</button></a>
  <br>
  

  {% for build in build %}
  <article class="d-inline-flex justify-content-center">
    <a href="/builds/{{ build._id }}"> 
      <h2>
        {{ build.name }}
      </h2>
    </a>
  </article>
  {% endfor %}
  <br>
  <a href="/users/logout" class="d-inline-flex justify-content-center"><button>Logout</button></a>
</div>
{% endblock %}
