{% layout "layout.liquid" %} {% block content %}
<div class="d-flex justify-content-center">
  <form action="/builds/{{ build._id }}?_method=PUT" method="post">
    <fieldset >
      <legend >Edit {{ build.name }}</legend>
      <label >
        NAME:<input
          type="text"
          name="name"
          placeholder="Enter Build Name"
          value="{{ build.name }}"
        />
      </label>
      <br>
      <label>
        Mythic Item:<input
          type="text"
          name="item1"
          placeholder="Enter Mythic Item"
          value="{{ build.item1 }}"
        />
      </label>
      <br>
      <label>
        Boots:<input
          type="text"
          name="boots"
          placeholder="Enter Boots"
          value="{{ build.boots }}"
        />
      </label>
      <br>
      <label>
        Item 3:<input
          type="text"
          name="item3"
          placeholder="Enter Item 3"
          value="{{ build.item3 }}"
        />
      </label>
      <br>
      <label>
        Item 4:<input
          type="text"
          name="item4"
          placeholder="Enter Item 4"
          value="{{ build.item4 }}"
        />
      </label>
      <br>
      <label>
        Item 5:<input
          type="text"
          name="item5"
          placeholder="Enter Item 5"
          value="{{ build.item5 }}"
        />
      </label>
      <br>
      <label>
        Item 6:<input
          type="text"
          name="item6"
          placeholder="Enter Item 6"
          value="{{ build.item6 }}"
        />
      </label>
    </fieldset>
    <input type="submit" value="Edit {{ build.name }}" />
  </form>
</div>
{% endblock %}
